
Table auth_users {
  Note: "Tabla de usuarios, gestionada por Supabase Auth."
  id uuid [not null, pk]
  email text [not null]
  created_at timestamptz [not null]
  updated_at timestamptz [not null]
}

Table user_anime_collection {
  Note: "Tabla de colecciones personales de animes de cada usuario."
  id uuid [pk, not null, default: 'gen_random_uuid()']
  user_id uuid [not null]
  anime_id integer [not null]
  anime_data jsonb [not null]
  status anime_status [not null]
  episodes_watched integer [not null, default: 0]
  rating integer
  notes text
  created_at timestamptz [not null, default: 'now()']
  updated_at timestamptz [not null, default: 'now()']
}

Ref: auth_users.id < user_anime_collection.user_id

